<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Products List</h1>
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Product List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <button data-bind="click: openAddProductModal" class="btn btn-primary fa fa-plus" style="margin-bottom: 15px; padding: 10px;"> New Product </button>
                    <table width="100%" class="table table-striped table-bordered table-hover" id="productList">
                        <thead>
                            <tr>
                                <th>Product Name</th>
                                <th>Supplier ID</th>
                                <th>Category ID</th>
                                <th>Quantity Per Unit</th>
                                <th>Unit Price</th>
                                <th>Action</th>
                            </tr>
                        </thead>
                       
                        <tbody data-bind="foreach: productList">
                            <tr class="odd gradeX">
                                <td><span data-bind="text:  ProductName"></span></td>
                                <td><span data-bind="text:  SupplierID"></span></td>
                                <td><span data-bind="text:  CategoryID"></span></td>
                                <td class="center"><span data-bind="text:  QuantityPerUnit"></span></td>
                                <td class="center"><span data-bind="text:  UnitPrice"></span></td>
                                <td>
                                    <div class="row">
                                        <div class="col-md-6">
                                            <button data-bind="click: $parent.editProduct.bind($root)" class="btn btn-success fa fa-pencil" style="padding: 10px; display: block; margin: auto;" data-toggle="tooltip" data-placement="top" title="Edit Category"></button>
                                        </div>
                                        <div class="col-md-6">
                                            <button data-bind="click: $parent.deleteProduct" class="btn btn-danger fa fa-times" style="padding: 10px; display: block; margin: auto;" data-toggle="tooltip" data-placement="top" title="Delete Category"></button>
                                        </div>
                                    </div>
                                </td>
                            </tr>  
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->
                   
                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    
    <!-- /.row -->
</div>

<section id="product-modal" class="modal fade" tabindex="-1" data-width="760">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <strong>Add New Product</strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row" style="padding-bottom: 15px">
                            <div class="col-md-4">
                                <div>Product Name: </div>
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <input class="form-control" data-bind="value:$root.productEnt().ProductName" placeholder="Product Name..." />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div>Category: </div>
                            </div>
                            <div class="col-md-8">
                                <div>                                   
                                    <select id="categoryControl" class="form-control" data-bind="options : categoryOption,optionsText: 'CategoryName', optionsValue: 'CategoryId', value: selectedCategory, valueAllowUnset: false"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div>Supplier: </div>
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <select id="supplieryControl" class="form-control" data-bind="options : suppilerOption,optionsText: 'CompanyName', optionsValue: 'SupplierID', value: selectedSupplier, valueAllowUnset: false"></select>
                                </div>
                            </div>
                        </div>
                        <div class="row" style="padding-bottom: 15px">
                            <div class="col-md-4">
                                <div>QuantityPerUnit: </div>
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <input class="form-control" data-bind="value:$root.productEnt().QuantityPerUnit" placeholder="Quantity Per Unit..." />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-bind="click: $root.AddProduct.bind($root)">Add</a>
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</section>
@section Scripts{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/Products")

<script type="text/javascript">
    var ProductViewModel;
        
        $(document).ready(function () {         
            ProductViewModel = new WebTraining.ProductsViewModel(); 
            ko.applyBindings(ProductViewModel);             
        });
</script>
}