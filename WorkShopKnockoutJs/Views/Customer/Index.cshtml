<div id="page-wrapper">
    <p>
        <button class="btn btn-primary" id="create">Create</button>
    </p>
    <!-- /.row -->
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Customer List
                </div>
                <!-- /.panel-heading -->
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="customerList">
                        <thead>
                            <tr>
                                <th>
                                    CustomerID
                                </th>
                                <th>
                                    CompanyName
                                </th>
                                <th>
                                    ContactName
                                </th>
                                <th></th>
                            </tr>
                        </thead>                        

                        <tbody data-bind="foreach: lookupCollection">
                            <tr class="odd gradeX" data-bind="template: { name: Mode, data: $data }">
                            </tr>
                        </tbody>
                    </table>
                    <!-- /.table-responsive -->

                </div>
                <!-- /.panel-body -->
            </div>
            <!-- /.panel -->
        </div>
        <!-- /.col-lg-12 -->
    </div>
    <!-- /.row -->
    

    <script type="text/html" id="display">
        <td data-bind="text: CustomerID"></td>
        <td data-bind="text: CompanyName"></td>
        <td data-bind="text: ContactName"></td>
        <td>
            <button class="btn btn-success kout-edit">Edit</button>
            <button class="btn btn-danger kout-delete">Delete</button>
        </td>
    </script>

    <script type="text/html" id="edit">
        <td><input type="text" data-bind="value: CustomerID" /></td>
        <td><input type="text" data-bind="value: CompanyName" /></td>
        <td><input type="text" data-bind="value: ContactName" /></td>
        <td>
            <button class="btn btn-success kout-update">Update</button>
            <button class="btn btn-danger kout-cancel">Cancel</button>
        </td>
    </script>
    
</div>
@section Scripts{
    @Scripts.Render("~/bundles/Customer")
}