
@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<div id="page-wrapper">
    <div class="row">
        <div class="col-lg-12">
            <h1 class="page-header">Suppliers</h1>
        </div>
    </div>
    <div class="row">
        <div class="col-lg-12">
            <div class="panel panel-default">
                <div class="panel-heading">
                    Suppliers List
                </div>
                <div class="panel-body">
                    <table width="100%" class="table table-striped table-bordered table-hover" id="tblSuppliers">
                        <thead>
                            <tr>
                                <th>NO</th>
                                <th>Company</th>
                                <th>Contact Person</th>
                                <th>Address</th>
                                <th>Postal Code</th>
                                <th>Phone</th>
                                <th>Fax</th>
                                <th>Home Page</th>
                            </tr>
                        </thead>

                        <tbody data-bind="foreach: {data: lstSuppliers, as: 'item'}">
                            <tr>
                                <td><span data-bind="text: ($index() + 1)"></span></td>
                                <td><span data-bind="text: item.CompanyName"></span></td>
                                <td><span data-bind="text: $parent.ProcessCommon(item, 'fc')"></span></td>
                                <td><span data-bind="text: $parent.ProcessCommon(item, 'fa')"></span></td>
                                <td><span data-bind="text: item.PostalCode"></span></td>
                                <td><span data-bind="text: item.Phone"></span></td>
                                <td><span data-bind="text: item.Fax"></span></td>
                                <td><a style="cursor:pointer" data-bind="text: $parent.ProcessCommon(item, 'hp'), attr: {href: $parent.ProcessCommon(item, 'hp', 1)}"></a></td>
                            </tr>
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>

<section id="supplier-modal" class="modal fade" tabindex="-1" data-width="80%">
    <div class="modal-dialog">
        <div class="modal-content">
            <div class="modal-header">
                <button type="button" class="close" aria-hidden="true" data-dismiss="modal">&times;</button>
                <h4 class="modal-title">
                    <strong>Add New Category</strong>
                </h4>
            </div>
            <div class="modal-body">
                <div class="form-body">
                    <div class="form-group">
                        <div class="row" style="padding-bottom: 15px">
                            <div class="col-md-4">
                                <div>Category Name: </div>
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <input class="form-control" placeholder="Category Name..." data-bind="value: $root.createCategoryVM.CategoryName" />
                                </div>
                            </div>
                        </div>
                        <div class="row">
                            <div class="col-md-4">
                                <div>Category Description: </div>
                            </div>
                            <div class="col-md-8">
                                <div>
                                    <input class="form-control" placeholder="Category Description..." data-bind="value: $root.createCategoryVM.CategoryDescription" />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
            <div class="modal-footer">
                <a href="#" class="btn btn-primary" data-bind="click: addCategory">Add</a>
                <a href="#" class="btn btn-default" data-dismiss="modal">Cancel</a>
            </div>
        </div>
    </div>
</section>

@section Scripts{
    @Scripts.Render("~/bundles/knockout")
    @Scripts.Render("~/bundles/Suppliers")
    <script type="text/javascript">
        $(document).ready(function () {
            ko.applyBindings(new ViewModel.SuppliersViewModel());
        });
    </script>
}

